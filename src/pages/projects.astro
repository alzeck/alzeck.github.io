---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro"
const projects = [
  {
    title: "pouring.at",
    href: "https://pouring.at",
    description: "A simple and easy to use cocktail recipe finder.",
  },
];
---

<Layout title="Projects">
  <ul class="list-disc">
  {projects.map((p) => (
    <li>
      <Link label={p.title} href={p.href} />
      <p class="text-sm mt-2 text-muted" >{p.description}</p> 
    </li>
  ))}

  </ul>
</Layout>
